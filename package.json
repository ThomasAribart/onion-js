{
  "name": "onion-js",
  "description": "Type-safe high-order functions library",
  "homepage": "https://github.com/ThomasAribart/onion-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThomasAribart/onion-js.git"
  },
  "bugs": {
    "url": "https://github.com/ThomasAribart/onion-js/issues"
  },
  "keywords": [
    "typescript",
    "hotscript",
    "high-order functions",
    "middleware"
  ],
  "license": "MIT",
  "contributors": [
    "ThomasAribart <thomasa@theodo.fr>"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/csj/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "pnpm test-type && pnpm test-format && pnpm test-linter && pnpm test-unit",
    "test-format": "prettier --check .",
    "test-linter": "eslint --ext=js,ts .",
    "test-type": "tsc --noEmit --emitDeclarationOnly false",
    "test-unit": "vitest run --passWithNoTests",
    "test-unit-watch": "vitest --passWithNoTests"
  },
  "dependencies": {
    "hotscript": "^1.0.13"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.55.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "prettier": "^3.3.3",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "1.6.0"
  }
